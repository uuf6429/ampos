{
    "name": "uuf6429/ampos",
    "description": "PHP Kernel based on a minimal linux system",
    "type": "project",
    "require": {
        "php": "^8.4",
        "ext-ffi": "*",
        "ext-readline": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "uuf6429\\AMPOS\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Christian Sciberras",
            "email": "christian@sciberras.me"
        }
    ],
    "config": {
        "process-timeout": -1
    },
    "scripts": {
        "clean": "@php scripts/clean.php",
        "build": "docker compose up --build --abort-on-container-failure --yes",
        "start": "@php scripts/run-vb-vm.php",
        "clean-start": ["@clean", "@build", "@start"]
    }
}
